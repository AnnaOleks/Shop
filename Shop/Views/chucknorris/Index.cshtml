@model Shop.Models.chucknorris.chucknorrisViewModel

@{
    ViewData["Title"] = "Chuck Norris Joke";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>

    @if (!string.IsNullOrEmpty(Model.icon_url))
    {
        <img src="@Model.icon_url" alt="Chuck Norris Icon" class="mt-3 mb-3" />
    }

    <blockquote class="blockquote" style="font-size: 1.5rem;">
        <p class="mb-0">@Model.value</p>
        <footer class="blockquote-footer mt-2">Chuck Norris</footer>
    </blockquote>

    <a asp-action="Index" asp-controller="chucknorris" class="btn btn-primary mt-4">
        Get another joke!
    </a>
</div>