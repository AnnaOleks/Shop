@model IEnumerable<Shop.Models.Spaceships.SpaceshipsIndexViewModel>
@{
	int nr = 1;
}
@{
	string mark = "*" ;
}

<div class="h1">
	Spaceships
</div>
<form method="post">
	<table class="table table-hover">
		<thead>
			<tr>
				<th scope="col"> Nr </th>
				<th scope="col"> Name </th>
				<th scope="col"> Type </th>
				<th scope="col"> Built Date </th>
				<th scope="col"> Crew </th>

			</tr>
		</thead>
		<tbody>
			
			@foreach (var spaceships in Model)
			{
				<tr>
					<td>
						@nr @mark
							
					</td>
					<td>
						@spaceships.Name
					</td>
					<td>
						@spaceships.TypeName
					</td>
					<td>
						@spaceships.BuiltDate
					</td>
					<td>
						@spaceships.Crew
					</td>
				</tr>
				nr++;
				mark += "*";
			}
		</tbody>
	</table>
</form>