@model Shop.Models.OpenWeather.OpenWeatherSearchViewModel

<h1>Search City</h1>

<div class="container">
    <form method="post">
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <h2>Searh the forecast in a city</h2>
                <label asp-for="Name" style="font-family: Arial"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5" style="margin-top:10px">
                <button asp-controller="OpenWeather" asp-action="searchCity" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>
</div>

