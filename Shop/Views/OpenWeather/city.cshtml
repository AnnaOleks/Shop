@model Shop.Models.OpenWeather.OpenWeatherViewModel

<div class="container">
    <h2> Forecast for the selected city </h2>
    <h2>@Html.DisplayFor(model => model.Name)</h2>
    <hr />
    <dl class="row text-dark">
        <div>
            <dt class="col-sm-2">
                Temperature:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Temp) °C
            </dd>
        </div>
        <div>
            <dt class="col-sm-2">
                Feels like:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.feels_like) °C
            </dd>
        </div>
        <div>
            <dt class="col-sm-2">
                Humidity:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Humidity) %
            </dd>
        </div>
        <div>
            <dt class="col-sm-2">
                Pressure:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Pressure) hPa
            </dd>
        </div>
        <div>
            <dt class="col-sm-2">
                Wind speed:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Speed) m/s
            </dd>
        </div>
        <div>
            <dt class="col-sm-2">
                Description:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
        </div>

        <div class="d-flex justify-content-end">
            <a asp-controller="openWeather" asp-action="Index"
               class="btn btn-success">
                Back to search
            </a>
        </div>
    </div>
</div>