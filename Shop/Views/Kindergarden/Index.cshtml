@model IEnumerable<Shop.Models.Kindergarden.KindergardenIndexViewModel>
@{
	int nr = 1;
}
@{
	string mark = "*" ;
}
<div>
	<a asp-action="create" asp-controller="kindergarden" type="submit" class="btn btn-primary"> Create </a>
</div>
<div class="h1">
	Kindergarten
</div>
<form method="post">
	<table class="table table-hover">
		<thead>
			<tr>
				<th scope="col"> Nr </th>
				<th scope="col"> Group Name </th>
				<th scope="col"> Children Count </th>
				<th scope="col"> Kindergarden Name </th>
				<th scope="col"> Teacher Name </th>
				<th scope="col"></th>
			</tr>
		</thead>
		<tbody>
			
			@foreach (var spaceships in Model)
			{
				<tr>
					<td>
						@nr @mark
							
					</td>
					<td>
						@spaceships.GroupName
					</td>
					<td>
						@spaceships.ChildrenCount
					</td>
					<td>
						@spaceships.KindergardenName
					</td>
					<td>
						@spaceships.TeacherName
					</td>
					<td>

					</td>
				</tr>
				nr++;
				mark += "*";
			}
		</tbody>
	</table>
</form>